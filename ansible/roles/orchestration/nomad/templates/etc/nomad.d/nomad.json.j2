{
  "data_dir": "/etc/nomad/server",
  "log_level": "debug",
  "datacenter": "{{ datacenter_name }}",
  "region": "{{ datacenter_region }}",
  "name": "nomad-node--{{ ansible_facts['eth0']['ipv4_secondaries'][0]['address'] | replace('.','-') }}",
  "server": {
    "enabled": true,
    "bootstrap_expect": 1,
    "job_gc_threshold": "1m"
  },
  "bind_addr": "0.0.0.0",
  "advertise": {
    "http": "{{ ansible_facts['eth0']['ipv4']['address'] }}",
    "rpc": "{{ ansible_facts['eth0']['ipv4_secondaries'][0]['address'] }}",
    "serf": "{{ ansible_facts['eth0']['ipv4_secondaries'][0]['address'] }}"
  },
  "client": {
    "enabled": true,
    "gc_interval": "10s"
  },
  "consul": {
     "address": "{{ ansible_facts['eth0']['ipv4_secondaries'][0]['address'] }}:8500",
     "server_service_name": "node--server--{{ ansible_facts['eth0']['ipv4_secondaries'][0]['address'] | replace('.','-') }}",
     "client_service_name": "node--client--{{ ansible_facts['eth0']['ipv4_secondaries'][0]['address'] | replace('.','-') }}",
     "auto_advertise": true,
     "server_auto_join": true,
     "client_auto_join": true
   }
}
